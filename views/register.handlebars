<div class='container'>
  <div class='row'>
    <div class='col l4 offset-l4'>
      <h2>Please Register</h2>
      <form class='col s12' method='POST' action='/register'>
        <div class='row'>
          <div class='input-field col s6'>
            <input placeholder='Username' id='username' name='username' type='text' class='validate'>
            <label for='username'>Username</label>
          </div>
        </div>
        <div class='row'>
          <div class='input-field col s12'>
            <input id='password' name='password' type='password' class='validate'>
            <label for='password'>Password</label>
          </div>
        </div>
        <a type='submit' class='waves-effect waves-light btn'>Register</a>
      </form>
    </div>
    <h5>Already Registered?</h5>
    <a href='/login' class='waves-effect waves-light btn'>Sign In</a>
  </div>
</div>
