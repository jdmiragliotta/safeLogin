<div class='container'>
  <div class='row'>
    <div class='col l4 offset-l4'>
      <h2>Please Login</h2>
      <form class='col s12' method='POST' action='/login'>
        <div class='row'>
          <div class='input-field col s6'>
            <input placeholder='Username' id='username' name='username' type='text' class='validate'>
            <label for='username'>Username</label>
          </div>
        </div>
        <div class='row'>
          <div class='input-field col s12'>
            <input id='password' name='password' type='password' class='validate'>
            <label for='password'>Password</label>
          </div>
        </div>
        <button type='submit' class='waves-effect waves-light btn'>Register</button>
      </form>
    </div>
    </br>
    <h5>Not Registered?</h5>
    <a href='/' class='waves-effect waves-light btn'>Register Here</a>
  </div>
</div>
